{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "paths": {
            "@app/utils": ["libs/utils/src"],
            "@app/utils/*": ["libs/utils/src/*"],
            "@app/health": ["libs/health/src"],
            "@app/health/*": ["libs/health/src/*"],
            "@app/cron": ["libs/cron/src"],
            "@app/cron/*": ["libs/cron/src/*"],
            "@app/interfaces": ["libs/interfaces/src"],
            "@app/interfaces/*": ["libs/interfaces/src/*"],
            "@app/core": ["libs/core/src"],
            "@app/core/*": ["libs/core/src/*"]
        }
    },
    "include": ["apps/**/*", "libs/**/*", ".eslintrc.js", "global.d.ts"]
}
