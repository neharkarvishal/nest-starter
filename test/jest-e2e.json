{
    "verbose": true,
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": ".",
    "roots": [
        "<rootDir>/src/"
    ],
    "moduleNameMapper": {
        "src/(.*)": "<rootDir>/src/$1",
        "src": "<rootDir>/src"
    },
    "testEnvironment": "node",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    }
}
